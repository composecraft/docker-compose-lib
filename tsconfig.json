{
    "compilerOptions": {
        "target": "ES2016",
        "module": "ES2022",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./lib/esm",
        "declaration": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "paths": {
            "@commons/*": ["./src/commons/*"],
            "@compose/*": ["./src/compose/*"]
        }
    },
    "include": ["./src"],
    "exclude": ["node_modules", "lib"]
}
